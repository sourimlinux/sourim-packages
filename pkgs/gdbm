name="gdbm"
version="1.23"
depends="glibc"
maintainer="Andrey Stekolnikov <honakac@yandex.ru>"
source=(
    "http://mirror.checkdomain.de/gnu/gdbm/gdbm-1.23.tar.gz"
)

package() {
    cd $name-$version
    ./configure --prefix=/usr    \
        --disable-static \
        --enable-libgdbm-compat
    make
    make install DESTDIR=$1
}