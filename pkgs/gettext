name="gettext"
version="0.22.4"
depends="glibc"
maintainer="Andrey Stekolnikov <honakac@yandex.ru>"
source=(
    "https://ftp.gnu.org/pub/gnu/gettext/$name-$version.tar.gz"
)

package() {
    cd $name-$version
    ./configure --prefix=/usr \
            --disable-static  \
            --docdir=/usr/share/doc/gettext-$version &&
    make &&
    make install DESTDIR=$1
}
