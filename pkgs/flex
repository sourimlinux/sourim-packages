name="flex"
version="2.6.4"
depends="glibc"
maintainer="Andrey Stekolnikov <honakac@yandex.ru>"
source=(
    "https://github.com/westes/flex/releases/download/v2.6.4/flex-2.6.4.tar.gz"
)

package() {
    cd $name-$version
    ./configure --prefix=/usr \
                --disable-static
    make
    make install DESTDIR=$1
    ln -sv flex   $1/usr/bin/lex
}