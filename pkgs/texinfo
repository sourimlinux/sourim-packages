name="texinfo"
version="7.1"
depends="glibc"
maintainer="Andrey Stekolnikov <honakac@yandex.ru>"
source=(
    "http://mirror.checkdomain.de/gnu/texinfo/texinfo-$version.tar.xz"
)

package() {
    cd $name-$version
    ./configure --prefix=/usr
    make
    make install DESTDIR=$1
    make TEXMF=/usr/share/texmf install-tex DESTDIR=$1
}